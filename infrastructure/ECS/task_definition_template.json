[
    {
      "name": "${name}",
      "image": "${image}",
      "memoryReservation": ${memory},
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 0
        }
      ],
      "environment": [
        {
            "name": "ENVIRONMENT",
            "value": "${env}"
        }
      ],
      "command": ${command},
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group}",
            "awslogs-region": "${region}"
        },
      }
    }
  ]